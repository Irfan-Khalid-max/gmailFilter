using System;
using System.IO;
using System.Threading.Tasks;
using Microsoft.AspNetCore.Mvc;
using Microsoft.Azure.WebJobs;
using Microsoft.Azure.WebJobs.Extensions.Http;
using Microsoft.AspNetCore.Http;
using Microsoft.Extensions.Logging;
using Newtonsoft.Json;

namespace GetEmailData
{
    public static class EmailFunction
    {
        [FunctionName("GetEmailData")]
        public static async Task<IActionResult> Run(
            [HttpTrigger(AuthorizationLevel.Function, "post", Route = null)] HttpRequest req,
            ILogger log)
        {
            log.LogInformation("C# HTTP trigger function processed a request.");

            string requestBody = await new StreamReader(req.Body).ReadToEndAsync();
            dynamic emailData = JsonConvert.DeserializeObject(requestBody);

            if (emailData == null)
            {
                return new BadRequestObjectResult("Please pass email data in the request body");
            }

            // Process the email data here
            // This is where you can add your logic to handle the email data

            return new OkObjectResult($"Email data received and processed successfully");
        }
    }
}